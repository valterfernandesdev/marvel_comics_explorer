var link = document.getElementById('like_comic_id_<%= j @favourit_comic.comic_id %>')

link.classList.remove("like-hover-img");
link.classList.add("liked-img");
link.setAttribute("data-method", "delete");

document.getElementById('like_img_heart_off_<%= j @favourit_comic.comic_id %>').remove();

var newImg = document.createElement('img');
newImg.src = '<%= j asset_path("heart_on.png") %>';
newImg.id = 'like_img_heart_on_<%= j @favourit_comic.comic_id %>';
newImg.title = 'Liked';

link.appendChild(newImg);